{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "temperature_reading",
  "type": "object",
  "properties": {
    "device_id": {
      "type": "string"
    },
    "site": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "celsius": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "enum": [
        "OK",
        "WARN",
        "ALERT"
      ]
    }
  },
  "required": [
    "device_id",
    "site",
    "ts",
    "celsius"
  ]
}
